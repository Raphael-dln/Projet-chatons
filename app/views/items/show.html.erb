<div class = "container-fluid">

  <div class="container">
    <div class="row display-flex show-picture">
      <div class="col col-md-7">
        <img src=<%= @item.image_url %> alt="" class="show-image">
      </div>
      <div class="col col-md-5 col-md-5-show">
        <div class="card>
          <div class="card-body">
            <h4 class="card-title"><%= @item.title %></h4>
            <p class="card-text"><%= @item.description %> </p>
          </div>
          <ul class="list-group list-group-flush">
            <li class="list-group-item">Prix de la photographie : <%= @item.price%> â‚¬ </li>
            <li class="list-group-item">Mise en ligne le : <%= @item.created_at.strftime(" %m/%d/%Y") %> </li>
          </ul>
          <div class="card-body text-center">
            <%= link_to "Ajouter au panier", new_cart_path, class: "btn btn-primary"%>
            <%= link_to "Ajouter aux favoris", new_cart_path, class: "btn btn-secondary"%>
          </div>
        </div>
      </div>
    </div>

    <div class="mt-5 offset-1">
      <%= link_to "Retour", :back %>
    </div>
  </div>



</div>